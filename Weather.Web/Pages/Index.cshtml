@page
@model IndexModel
@{
    ViewData["Title"] = "Weather Report";
}

<div class="text-center">

    <h3> New UI Features</h3>
    <table class="table table-hover table-light">
        <thead>
            <tr>
                <th scope="col">Day</th>
                <th scope="col">Temperature</th>
                <th scope="col">Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (WeatherForecast item in @Model.WeatherReport)
            {
                <tr>
                    <td>@item.Date.ToString("MMMM dd, yyyy")</td>
                    <td>@item.TemperatureC C / @item.TemperatureF F</td>
                    <td>@item.Summary</td>
                </tr>

            }
        </tbody>
    </table>
</div>